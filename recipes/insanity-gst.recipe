# -*- Mode: Python -*- vi:si:et:sw=4:sts=4:ts=4:syntax=python

class Recipe(recipe.Recipe):
    name = 'insanity-gst'
    version = '0.0.1'
    commit = 'sdk-release-sdk-2012.5'
    # TODO: check license - no LICENSE or COPYING, some files state LGPLv2+,
    #       others LGPLv2.1+
    licenses = [License.LGPLv2_1Plus]
    config_sh = 'sh autogen.sh'
    configure_options = '--disable-introspection --program-prefix= '
    remotes = {'upstream': 'git://anongit.freedesktop.org/gstreamer/insanity-gst'}
    deps = [ 'insanity', 'gstreamer', 'gst-plugins-base', 'libsoup' ]
    platform_deps = {
            Platform.LINUX: ['gtk-doc'],
            Platform.DARWIN: ['gtk-doc'],
            Platform.WINDOWS: ['gtk-doc-windows'],
    }

    def prepare(self):
        if self.config.platform in [Platform.WINDOWS, Platform.DARWIN]:
            self.configure_options += ' --disable-gtk-doc'

    files_devel = ['include/insanity-gst-0.10', 'lib/pkgconfig/insanity-gst-0.10.pc']
    files_libs = ['libinsanity-gst-0.10']
    files_misc = [
        'libexec/insanity-gst/tests/insanity-test-gst-discoverer%(bext)s',
        'libexec/insanity-gst/tests/insanity-test-gst-dvd%(bext)s',
        'libexec/insanity-gst/tests/insanity-test-gst-generic-pipeline%(bext)s',
        'libexec/insanity-gst/tests/insanity-test-gst-hls%(bext)s',
        'libexec/insanity-gst/tests/insanity-test-gst-http%(bext)s',
        'libexec/insanity-gst/tests/insanity-test-gst-play%(bext)s',
        'libexec/insanity-gst/tests/insanity-test-gst-seek%(bext)s',
        'libexec/insanity-gst/tests/insanity-test-gst-stream-switch%(bext)s'
    ]
